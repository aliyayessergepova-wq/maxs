---

import Logo from '../assets/theme-images/logo.svg'

const { settings, lang } = Astro.props
---

<header class="wrapper bg-loop font-semibold" id="about">

  <!-- Wrapper -->
  <div class="bs-container py-6 flex justify-between items-center">

    <!-- Logo -->
    <a class="flex xl:min-w-32 group" href="/" aria-label={ settings.title + ' - Home' }>

      <h1 class="bs-h3">Max Spedition</h1>

    </a>

    <!-- Nav -->
    <nav class="hidden col-span-6 md:flex mx-auto self-stretch lg:gap-2">

      <!-- Links -->
      { settings.nav.map( item =>

        <a class="bs-btn !bg-transparent before:translate-y-full hover:before:translate-y-0" href={item.link}>
          { item.title }
        </a>

      )}

    </nav>


    <!-- Accessible Language Switcher -->
    <div class="flex items-center gap-4">
      <!-- Language selector -->
      <div class="relative inline-block">
        <label for="lang-switcher" class="sr-only">Выбор языка / Language selector</label>
        
        <select
          id="lang-switcher"
          class="appearance-none !bg-bs-surface-1 border border-bs-surface-3 cursor-pointer px-5 py-4 pr-10 rounded-md focus:outline-none focus:ring-2 focus:ring-offset-1 focus:ring-bs-accent focus-visible:ring-white/75" 
          aria-label="Language selector"
          onchange="window.location.pathname = this.value === 'ru' ? '/' : '/en';"
        >
          <option value="ru" selected={lang === 'ru'}>Русский</option>
          <option value="en" selected={lang === 'en'}>English</option>
        </select>

        <!-- Custom arrow -->
        <svg class="pointer-events-none absolute top-1/2 right-3 w-4 h-4 -translate-y-1/2 text-bs-foreground-dark" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
        </svg>
      </div>

    </div>

  </div>

</header>
