---

import Image from "astro/components/Image.astro"
import hero_screens from "../assets/theme-images/24177.jpg"

const { settings, title, content } = Astro.props

---

<section class="bs-container py-6 flex flex-col items-start">

  <!-- Content -->
  <div class="flex flex-col gap-6 lg:w-[70%] w-full py-16">

    <!-- Title -->
    <h1 class="bs-h1" set:html={ title } />

    <!-- Content -->
    <div class="bs-body-text xl:text-xl flex flex-col gap-4 [&_p]:last:text-[#737373]" set:html={ content } />

    <!-- CTA -->
    <button type="button" class="bs-btn self-start bs-mt-sm" onclick="document.getElementById('newsletter').scrollIntoView({ behavior: 'smooth' })">
      { settings.demo.cta }
    </button>

  </div>

  <!-- Image -->
  <!-- <figure class="flex place-content-center -mt-20 lg:mt-0">

    <Image src={ hero_screens } format="avif" quality="high" alt="Screens showing phone, tablet and desktop views of our website" loading="eager" />

  </figure> -->

</section>
